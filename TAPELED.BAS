REM Serial LED Demo Program with WS2812 Class

USECLASS WS2812
N=144:M=N/3:REM N=Number of LED
L=NEW(WS2812,N)

FOR I=0 TO M-1
 A=I*256/M
 CALL L.SETLED(I,A,255-A,0)
 CALL L.SETLED(I+M,255-A,0,A)
 CALL L.SETLED(I+M*2,0,A,255-A)
NEXT

DO
 FOR I=1 TO N-1
  CALL L.CPYLED(I,I-1)
 NEXT
 CALL L.CPYLED(0,N-1)
 WAIT 1
LOOP UNTIL INKEY()

CALL L._STOP()
END
